desc "Run BugReport on iOS UI tests"
lane :ios_bugreport_ui_test do
    simulator_name = ENV["CI_JOB_ID"]
    scan(
      scheme: "BugReportSampleiOSApp",
      derived_data_path: $derived_data_path,
      clean: true,
      result_bundle: true,
      skip_slack: true,
      devices: [simulator_name]
    )
end

